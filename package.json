{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "Fredrik Nicol <fredrik.nicol@gmail.com>",
  "devDependencies": {
    "@types/enzyme": "^3.1.6",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/jest": "^22.0.1",
    "@types/node": "^9.3.0",
    "@types/react-test-renderer": "^16.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.0.6",
    "lerna": "^2.5.1",
    "prettier": "^1.8.2",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.54.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^2.0.1",
    "tslib": "^1.8.1",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "npm run clean && lerna run build",
    "clean": "lerna run clean --parallel",
    "lint": "tslint \"packages/*/src/**/*.{ts,tsx}\" --fix",
    "pretty": "prettier --write \"packages/**/*.{js,json,ts,tsx,html}\"",
    "test": "jest --no-cache",
    "prepublish": "npm run test",
    "sloppy": "tsc && npm run pretty && npm run lint && npm run test",
    "example": "npm run start --prefix packages/example"
  }
}
