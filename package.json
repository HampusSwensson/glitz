  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lerna": "lerna --ignore=glitz-example",
    "prerelease": "lerna --ignore=glitz-example publish --npm-tag=next",
    "build": "npm run clean && lerna run build --",
    "clean": "lerna run clean --parallel",
    "lint": "tslint \"packages/*/src/**/*.{ts,tsx}\" --fix",
    "pretty": "prettier --write \"**/*.{js,json,ts,tsx,html,md}\"",
    "test": "jest",
    "lazy": "tsc && npm run lint && npm run pretty && npm run test",
    "example": "npm run start --prefix packages/example"
  }
